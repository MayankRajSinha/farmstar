<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back"
                android:src="@drawable/ic_arrow_back_black_24dp1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="#000"
                android:id="@+id/tsid"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:text="SALE ID : 001"
                android:layout_weight="8"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>


    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:id="@+id/scroll"
        android:layout_above="@+id/select"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="5dp"
        tools:context="mayank.example.zendor.onClickSeller.sellerDetails">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/buyerName"
                    android:textColor="#ff8a80"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:text="Buyer Name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_weight="1"
                    android:text="Buyer Id"
                    android:id="@+id/bid"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#ff8a80"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/commodity"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Commodity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />


                <TextView
                    android:id="@+id/saledId"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:text="SaleId"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="start"
                    android:text="Rate "
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_rupee_indian"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/rate"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="40/kg"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="start"
                    android:text="Weight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />


                <TextView
                    android:id="@+id/weight"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="end"
                    android:text="24 kgs"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="start"
                    android:text="Total Amount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_rupee_indian"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/totalAmount"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="4000"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>




            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:text="Delivery Address :"
                    android:textColor="#000"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/deliveryAddress"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="end"
                    android:text="_ _ _ __ _ __ __ _ __ _ __ _ _ _ __ _ _ _ __ _ _ _ _ __"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:text="Billing Address :"
                    android:textColor="#000"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/billingAddress"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="end"
                    android:text="_ _ _ __ _ __ __ _ __ _ __ _ _ _ __ _ _ _ __ _ _ _ _ __"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />


            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:text="Dispatched Date"
                    android:textColor="#000"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/ddate"
                    android:textColor="#000"
                    android:layout_weight="1.2"
                    android:textSize="16sp"
                    android:gravity="end"
                    android:text="16 April 2017 12:24:56"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>


        </LinearLayout>

        </ScrollView>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="5sp"
        app:cardElevation="5sp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50sp"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="#000"
            android:textSize="24sp"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/delivered"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50sp"
                android:gravity="center"
                android:text="Delivered"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>