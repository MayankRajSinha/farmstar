<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mayank.example.zendor.ContactAtivity">

    <android.support.v7.widget.Toolbar
        android:layout_margin="@dimen/toolBarMargin"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/button_background"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:gravity="center|start"
            android:textColor="@color/lightGreen"
            android:text="Contacts"
            android:textSize="@dimen/toolBarTextDimen"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.Toolbar>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Contact via :"
                android:textSize="30sp"
                android:textColor="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:padding="10dp"
                android:id="@+id/contactZonal"
                android:background="@drawable/button_background"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:text="Contact Zonal Manager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/contactZendor"
                android:background="@drawable/button_background"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="16sp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:text="Contact Farmstar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/mail"
                android:background="@drawable/button_background"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textColor="@color/gray"
                android:padding="10dp"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:text="Compose Mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
