<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.abc.xendorp1.fragments.add_zonal_manager">
    <ProgressBar
        android:id="@+id/progressbar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar1"
        android:background="@color/colorPrimary"
        app:titleTextColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:isScrollContainer="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttons"
        android:layout_below="@+id/toolbar1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/expandable"
                android:layout_width="match_parent"
                android:weightSum="1"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/name"
                            android:textSize="16dp"
                            android:layout_alignBaseline="@+id/name_value"
                            android:layout_width="wrap_content"
                            android:text="Name "
                            android:layout_height="wrap_content" />
                        <EditText
                            android:id="@+id/name_value"
                            android:layout_toRightOf="@id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/phno"
                            android:textSize="16dp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:text="Ph. No"
                            android:layout_alignBottom="@+id/container"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true" />
                        <RelativeLayout
                            android:id="@+id/container"
                            android:layout_toRightOf="@+id/phno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <include
                                layout="@layout/phone_number_inputter"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                        <FrameLayout
                            android:layout_below="@+id/phno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_marginLeft="20dp"
                                android:layout_marginBottom="10dp"
                                android:id="@+id/phno_values"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </LinearLayout>
                            <ImageView
                                android:id="@+id/add_num"
                                android:src="@drawable/ic_add_circle_black_24dp"
                                android:layout_width="20dp"
                                android:layout_gravity="bottom"
                                android:layout_height="20dp" />
                        </FrameLayout>

                    </RelativeLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:background="@drawable/border"
                        android:padding="2dp"
                        android:id="@+id/profilepic"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:id="@+id/addresscont"
                android:layout_below="@+id/expandable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/address"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:text="Address      "
                    android:layout_alignBaseline="@+id/address_value"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/address_value"
                    android:layout_toRightOf="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/usernamecont"
                android:layout_width="match_parent"
                android:layout_below="@+id/addresscont"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/username"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:text="Username    "
                    android:layout_alignBaseline="@+id/username_value"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/username_value"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:longClickable="false"
                    android:cursorVisible="false"
                    android:layout_toRightOf="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/passwordcont"
                android:layout_below="@+id/usernamecont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/password"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:text="Password    "
                    android:layout_alignTop="@+id/passcont"
                    android:gravity="center"
                    android:layout_alignBottom="@+id/passcont"
                    android:layout_height="wrap_content" />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/passcont"
                    android:layout_toRightOf="@+id/password"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/password_value"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/buttons"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="50dp">
        <RelativeLayout
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="@color/gray">
            <TextView
                android:layout_centerInParent="true"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:text="Cancel"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/submit"
            android:background="@color/green"
            android:layout_height="50dp">
            <TextView
                android:layout_centerInParent="true"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:text="Submit"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
