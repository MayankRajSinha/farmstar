<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/sellerView"
    tools:context="mayank.example.zendor.sellerDetailActivity">

    <android.support.v7.widget.Toolbar
        android:layout_margin="@dimen/toolBarMargin"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/button_background"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:gravity="center|start"
            android:textColor="@color/lightGreen"
            android:text="Enter Seller Detail"
            android:textSize="@dimen/toolBarTextDimen"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="start|center"
                android:paddingStart="5dp"
                android:text="Phone Number :"
                android:textColor="#000"
                android:textSize="20sp" />

            <EditText
                android:maxLength="10"
                android:id="@+id/phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:inputType="number" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="start|center"
                android:paddingStart="5dp"
                android:text="Name :"
                android:textColor="#000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="start|center"
                android:paddingStart="5dp"
                android:text="Address :"
                android:textColor="#000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/address"
                android:maxLength="100"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:inputType="textMultiLine" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="start|center"
                android:paddingStart="5dp"
                android:text="Pin Code :"
                android:textColor="#000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/pincode"
                android:maxLength="6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:inputType="number" />


        </LinearLayout>



        <LinearLayout
            android:id="@+id/zonelayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="center|start"
                android:text="Zone :"
                android:paddingStart="5dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <Spinner
                android:maxLength="10"
                android:id="@+id/zone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:inputType="phone" />


        </LinearLayout>


        <TextView
            android:id="@+id/locate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="3dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/background_larger_radius"
            android:layout_marginTop="10dp"
            android:text="Locate On Map"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:visibility="invisible"
            android:id="@+id/gpsAddress"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

            <ProgressBar
                android:visibility="gone"
                android:id="@+id/load"
                android:layout_centerInParent="true"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </RelativeLayout>

    </LinearLayout>


    <TextView

        android:layout_alignParentBottom="true"
        android:id="@+id/proceed"
        android:text="Proceed"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_margin="3dp"
        android:background="@drawable/background_larger_radius"
        android:textColor="@color/darkGreen"
        android:layout_width="match_parent"
        android:layout_height="50dp" />


</RelativeLayout>