<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="mayank.example.zendor.sellerOtpVerify">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_margin="@dimen/toolBarMargin"
        android:background="@drawable/button_background"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:gravity="center|start"
            android:textColor="@color/lightGreen"
            android:textSize="@dimen/toolBarTextDimen"
            android:text="Verify Phone No."
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="80dp"
        android:text="Enter OTP"
        android:textSize="18sp"
        android:textColor="#000"
        android:id="@+id/otptv"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_below="@+id/otptv"
        android:gravity="center"
        android:id="@+id/layout"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/e1"
            android:maxLength="4"
            android:gravity="center"
            android:inputType="number"
            android:layout_marginEnd="80dp"
            android:layout_marginStart="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/resendOtp"
        android:layout_below="@+id/layout"
        android:text="Resend Otp"
        android:gravity="center"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:visibility="gone"
        android:id="@+id/checked"
        android:layout_marginTop="15dp"
        android:src="@drawable/checked"
        android:layout_below="@+id/resendOtp"
        android:layout_centerHorizontal="true"
        android:layout_width="20dp"
        android:layout_height="20dp" />


    <TextView
        android:layout_margin="@dimen/toolBarMargin"
        android:id="@+id/choose"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:gravity="center"
        android:background="@drawable/background_larger_radius"
        android:textColor="@color/darkGreen"
        android:textSize="18sp"
        android:text="Choose Commodities"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</RelativeLayout>
