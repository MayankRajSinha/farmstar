
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Commodity Name :"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/cname"
                android:textColor="#000"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="end"
                android:text="Paddy"
                android:layout_width="0dp"
                android:layout_height="match_parent" />


        </LinearLayout>

        <LinearLayout
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Seller Name :"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/sname"
                android:textColor="#000"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="end"
                android:text="Mukesh"
                android:layout_width="0dp"
                android:layout_height="match_parent" />


        </LinearLayout>

        <LinearLayout
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Picked By :"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/pickedBy"
                android:textColor="#000"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="end"
                android:text="Mukesh"
                android:layout_width="0dp"
                android:layout_height="match_parent" />


        </LinearLayout>
        <LinearLayout
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Picked At : :"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/pickedAt"
                android:textColor="#000"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="end"
                android:text="Mukesh"
                android:layout_width="0dp"
                android:layout_height="match_parent" />


        </LinearLayout>
        <LinearLayout
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Collected By :"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/collectedBy"
                android:textColor="#000"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="end"
                android:text="Mukesh"
                android:layout_width="0dp"
                android:layout_height="match_parent" />


        </LinearLayout>

        <LinearLayout
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/weightText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Collected At :"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/collectedAt"
                android:textColor="#000"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="end"
                android:text="Mukesh"
                android:layout_width="0dp"
                android:layout_height="match_parent" />


        </LinearLayout>





        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingBottom="15dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/pos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Rate"
                    android:textSize="16sp" />


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_rupee_indian"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/rate"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="4000/kg"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout

            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="15dp"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/statusText"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="start"
                android:text="Booked By :"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/name"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="end"
                    android:layout_marginStart="20sp"
                    android:text="Mahesh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>




        </LinearLayout>

        <View
            android:background="#aeaeae"
            android:layout_width="match_parent"
            android:layout_height="2sp"></View>

        <LinearLayout
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/status"
                android:layout_weight="1"
                android:textSize="18sp"
                android:gravity="center"
                android:text="Collected"
                android:layout_width="0dp"
                android:layout_height="match_parent" />


            <TextView
                android:id="@+id/ts"
                android:textColor="#000"
                android:layout_weight="1"
                android:visibility="gone"
                android:textSize="16sp"
                android:gravity="center"
                android:text="YY-MM-DD HH:MM:SS"
                android:layout_width="0dp"
                android:layout_height="match_parent" />


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
